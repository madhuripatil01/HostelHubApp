<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="160dp"
    app:cardCornerRadius="30dp"
    android:background="#D0C27C0E"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/lnrMesInfo"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:background="#DA8509"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ImgSearchMes"
            android:layout_width="130dp"
            android:layout_height="78dp"
            android:layout_margin="10dp"
            android:src="@drawable/mes1"></ImageView>

        <TextView
            android:id="@+id/txtMesSearchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Sai Shraddha"
            android:textColor="#A80404"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>