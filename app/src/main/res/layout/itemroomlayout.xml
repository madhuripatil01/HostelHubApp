<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ImgShowRoom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/room1"></ImageView>
    <TextView
        android:id="@+id/txtRoomHosName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ImgShowRoom"
        android:text="hostel Name"
        ></TextView>
    <TextView
        android:id="@+id/txtRoomNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ImgShowRoom"
        android:layout_below="@+id/txtRoomHosName"
        android:layout_marginTop="30dp"
        android:text="Room No"
       ></TextView>

    <TextView
        android:id="@+id/txtRoomRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ImgShowRoom"
        android:layout_below="@+id/txtRoomNo"
        android:layout_marginTop="5dp"
        android:text="room rent"
        ></TextView>
    <TextView
        android:id="@+id/txtRoomCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ImgShowRoom"
        android:layout_below="@+id/txtRoomRent"
        android:text="4"
        ></TextView>

</RelativeLayout>
</androidx.cardview.widget.CardView>